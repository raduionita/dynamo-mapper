{
  "compilerOptions": {
    "lib": ["es2017"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ES2017",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "removeComments": true,
    "allowSyntheticDefaultImports":true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "{rootPathPrefix}/*": ["./*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}